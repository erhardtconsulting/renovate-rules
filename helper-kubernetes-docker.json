{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["\\.yaml$"],
      "matchStrings": [
        "image:\\s+repository:[^\\w]+(?<depName>[\\w\\.\\/\\-\\_]+)[^\\w]+tag:[^\\w]+(?<currentValue>[\\w\\.\\/\\-\\_]+)(@(?<currentDigest>[\\w:]+))?"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    },
    {
      "customType": "regex",
      "fileMatch": ["\\.yaml$"],
      "matchStrings": [
        "image:\\s+repository:[^\\w]+(?<depName>[\\w\\.\\/\\-\\_]+)[^\\w]+tag:[^\\w]+(?<currentValue>[\\w\\.\\/\\-\\_]+)[^\\w]+digest:[^\\w]+(?<currentDigest>[\\w:]+)?"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    },
    {
      "customType": "regex",
      "fileMatch": ["\\.yaml$"],
      "matchStrings": [
        "image:[^\\w]+(?<depName>[\\w\\.\\/\\-\\_]+):(?<currentValue>[\\w\\.\\/\\-\\_]+)(@(?<currentDigest>[\\w:]+))?"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "cluster\\.ya?ml$"
      ],
      "matchStrings": [
        "imageName:\\s*(?<depName>ghcr\\.io/cloudnative-pg/postgresql):(?<currentValue>[^\\s\\n]+)"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)-(?<patch>\\d+)$"
    }
  ]
}