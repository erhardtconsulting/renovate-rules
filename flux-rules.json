{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": false,
  "ignoreTests": true,
  "ignorePaths": [
    ".sops.yaml",
    "**/*.enc.yaml"
  ],
  "helm": {
    "repositories": [
      {
        "name": "bjw-s",
        "url": "https://bjw-s.github.io/helm-charts/"
      }
    ]
  },
  "flux": {
    "fileMatch": [
      "infrastructure/base/.+\\.yaml$",
      "apps/.+\\.yaml$"
    ]
  },
  "kubernetes": {
    "fileMatch": [
      "infrastructure/base/.+\\.yaml$",
      "apps/.+\\.yaml$"
    ]
  },
  "regexManagers": [
    {
      "fileMatch": [
        "apps/.+\\.yaml$",
        "infrastructure/base/.+\\.yaml$"
      ],
      "matchStrings": [
        "repository: (?<depName>.*?)(\\n|\\s)+tag: (?<currentValue>[0-9\\.]+)(@sha256:)?(?<digest>[a-zA-Z0-9:]+)?"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    },
    {
      "fileMatch": [
        "apps/.+/kustomization\\.yaml$",
        "infrastructure/base/.+/kustomization\\.yaml$"
      ],
      "matchStrings": ["https://raw\\.githubusercontent\\.com/(?<depName>[^/]*\\/[^/]*)/(?<currentValue>.*?)/"],
      "datasourceTemplate": "github-tags"
    }
  ],
  "packageRules": [
    {
      "matchDepTypes": ["action"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["renovate/renovate"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "matchDatasources": ["helm"],
      "matchPackageNames": ["app-template"],
      "enabled": true
    }
  ]
}
